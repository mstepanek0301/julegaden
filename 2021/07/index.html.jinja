{% extends "2021/templates/puzzle.html.jinja" %}

{% block number %}7{% endblock %}
{% block name %}Mapa{% endblock %}

{% block puzzle %}
  <div id="map">
    <img src="map.svg">
    <div id="card">
      <div class="box">
        <div class="card-text" id="card-name"></div>
        <div class="card-text" id="card-value"></div>
      </div>
      <div id="arrow"></div>
    </div>
  </div>
{% endblock %}

{% block key %}364638365{% endblock %}

{% block styles %}
  <style>
    #map {
      position: relative;
    }
    #card {
      position: absolute;
    }
    #arrow {
      position: relative;
      width: 0;
      height: 0;
      border: 5px solid transparent;
      border-top: 5px solid var(--color-red);
    }
    .box {
      position: relative;
      background-color: var(--color-red);
      color: var(--color-white);
      padding: 0.5em 0.8em;
    }
    .card-text {
      position: static;
      text-align: center;
    }
  </style>
{% endblock %}

{% block scripts %}
  {{ super() }}
  <script src="index.js" type="module"></script>
{% endblock %}
